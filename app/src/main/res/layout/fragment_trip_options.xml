<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/btn_pause_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/pause_trip"
            android:layout_marginTop="30dp"/>
    <Button
            android:id="@+id/btn_end_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_pause_trip"
            android:layout_alignLeft="@id/btn_pause_trip"
            android:layout_alignStart="@id/btn_pause_trip"
            android:layout_alignEnd="@id/btn_pause_trip"
            android:layout_alignRight="@id/btn_pause_trip"
            android:text="@string/end_trip"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/imagebutton"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


</RelativeLayout>