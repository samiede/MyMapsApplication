<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
            android:id="@+id/btn_new_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/new_trip"
            android:layout_marginTop="30dp"/>
    <Button
            android:id="@+id/btn_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_new_trip"
            android:layout_alignLeft="@id/btn_new_trip"
            android:layout_alignStart="@id/btn_new_trip"
            android:layout_alignEnd="@id/btn_new_trip"
            android:layout_alignRight="@id/btn_new_trip"
            android:text="@string/recent"/>

    <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/ic_menu_help"
            android:contentDescription="helpbutton"/>

</RelativeLayout>